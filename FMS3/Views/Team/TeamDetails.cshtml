@model FMS3.Models.Team
@{
    ViewData["Title"] = "Team Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Team Details - @Html.LabelForModel(Model.Name)</h2>

@Html.DisplayNameFor(model => model.DivisionId):
@Component.InvokeAsync("DivisionName", new { divisionId = Model.DivisionId }).Result
<br />

@Html.DisplayNameFor(model => model.YearFormed):
@Html.LabelForModel(Model.YearFormed.ToString())
<br />

@Html.DisplayNameFor(model => model.Cash):
@Component.InvokeAsync("CashFormat", new { cashValue = Model.Cash }).Result
<br />

@Html.DisplayNameFor(model => model.StadiumCapacity):
@Html.LabelForModel(Model.StadiumCapacity.ToString())
<br />
<hr />
@Html.DisplayNameFor(model => model.Formation):
@Html.LabelForModel(Model.Formation.ToString())
<br />
@Html.ActionLink("Squad", "Squad", "Player", new { teamId = Model.Id })
<hr />
<hr />
