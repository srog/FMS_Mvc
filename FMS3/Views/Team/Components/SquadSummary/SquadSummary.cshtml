@model IEnumerable<FMS3.Models.Player>

Squad Summary:
<br />
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.InjuredWeeks)
            </th>
         
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
         
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
      
            <td>
                @Component.InvokeAsync("CashFormat", new { cashValue = item.Value }).Result
            </td>
  
            <td>
                @Html.DisplayFor(modelItem => item.InjuredWeeks)
            </td>
      
            <td>
                @Html.ActionLink("Details", "Index", "Player", new { id = item.Id }) 
            </td>
        </tr>
}
    </tbody>
</table>
